@model StudentskaSluzba.Models.Predmet
@{
    ViewData["Title"] = "AddPredmet";
}

<div class="container">
    <br />
    <form method="post" asp-action="AddEditPredmet">

        <div class="form-group">
            <label>Naziv predmeta</label>
            <input asp-for="Naziv" type="text" class="form-control" />
        </div>

        <div class="form-group">
            <label>ECTS</label>
            <input asp-for="ETCS" type="text" class="form-control" />
        </div>

        <input type="submit" class="btn btn-warning" value="Dodaj/izmijeni" />
        <a asp-controller="Predmet" asp-action="Index" class="btn btn-primary text-white">Nazad</a>
    </form>
</div>

